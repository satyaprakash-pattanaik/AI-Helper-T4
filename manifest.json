{
  "manifest_version": 3,
  "name": "Hover AI Lens",
  "version": "1.0",
  "description": "Hover over elements to get AI summaries and ask more.",
  "permissions": ["activeTab", "scripting", "storage"],

  "background": {
    "service_worker": "background.js",
    "type": "module"
  },

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],

  "action": {
    "default_icon": "logo.png"
  }
}